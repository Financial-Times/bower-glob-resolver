{
  "name": "bower-glob-resolver",
  "version": "1.0.0",
  "description": "A resolver plugin for Bower which enables the use of multiple bower.json files which are found using a glob pattern.",
  "main": "index.js",
  "scripts": {
    "test:spec": "jasmine tests/spec.js",
    "test:prettier": "prettier --config .prettierrc.json --list-different **/*.js",
    "test": "npm run test:prettier && npm run test:spec"
  },
  "keywords": [
    "bower-resolver",
    "glob"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-like-robots/bower-glob-resolver.git"
  },
  "author": "Matt Hinchliffe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-like-robots/bower-glob-resolver/issues"
  },
  "homepage": "https://github.com/i-like-robots/bower-glob-resolver",
  "dependencies": {
    "glob": "^7.1.3",
    "semver": "^5.6.0",
    "tmp": "0.0.33"
  },
  "devDependencies": {
    "jasmine": "^3.3.1",
    "prettier": "^1.16.2",
    "rimraf": "^2.6.3"
  },
  "engines": {
    "node": ">= 8.0.0"
  }
}
